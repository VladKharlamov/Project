@using PhotoAlbum.WEB.HTMLHelpers
@model PhotoAlbum.WEB.Models.IdentityPageViewModel

@{
    ViewBag.Title = "UserManagement";
}

<h2>UserManagement</h2>

<p>
    @Html.ActionLink("Create New", "Register")
</p>
<table class="table">
    <tr>
        <th>
            UserName
        </th>
        @if (User.IsInRole("admin") || User.IsInRole("moderator"))
        {

            <th>
                Email
            </th>

        }
        <th>
            Name
        </th>

        <th>
            Birthday
        </th>
        @if (User.IsInRole("admin") || User.IsInRole("moderator"))
        {

            <th>
                Role
            </th>
        }
        <th></th>

    </tr>

    @foreach (var item in Model.Users)
    {
        <tr>
            <td>
                <img src="@item.Avatar" width="70px" type="image/jpeg" />
                @Html.ActionLink(item.UserName, "Photos", "Photo", new { id = item.Id }, null)
            </td>
            @if (User.IsInRole("admin") || User.IsInRole("moderator"))
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bithday)
            </td>
            @if (User.IsInRole("admin") || User.IsInRole("moderator"))
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })


                </td>
            }

        </tr>
    }

</table>
<div>    @Html.PageLinks(Model.PagingInfo, x => Url.Action("UserManagement", new { page = x })) </div>

